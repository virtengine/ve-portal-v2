{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "outDir": "./rules",
    "noImplicitAny": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es5",
    // Workaround for https://github.com/cypress-io/cypress/issues/1087
    "skipLibCheck": true
  },
  "paths": {
    "*": ["*", "../node_modules"]
  },
  "include": [
    "./rules/*.ts"
  ],
  "exclude": [
    "./**/*.spec.*"
  ]
}
